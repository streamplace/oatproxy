{
  "compilerOptions": {
    "outDir": "dist/",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "strict": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "module": "NodeNext",
    "sourceMap": true,
    "declaration": true,
    "jsx": "react-jsx"
  },
  "include": ["lib"]
}
